<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgLiveo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/clear"
            android:src="@drawable/ic_liveo" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/clear"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutToReplace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout1"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <ToggleButton
            android:id="@+id/ToggleButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_ereceipt"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/ToggleButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_list_of_collection"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/ToggleButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_reprint"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/ToggleButton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_cancel_payment"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/ToggleButton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_settings"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/ToggleButton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/toggle_button_selector_more"
            android:checked="true"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</RelativeLayout>